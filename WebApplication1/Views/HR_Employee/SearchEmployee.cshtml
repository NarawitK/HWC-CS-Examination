@model List<WebApplication1.Models.EmployeeSearchModel>
@using System.Linq

@{
    ViewBag.Title = "ค้นหาข้อมูลพนักงาน (ไม่ใช้ Webservice)";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ค้นหาข้อมูลพนักงาน <small>ไม่ใช้ Webservice</small></h2>

@if (ViewBag.Exception != null)
{
    <p class="bg-danger"><span class="glyphicon glyphicon-alert"></span> Error: @ViewBag.Exception</p>
}

@using (Html.BeginForm("SearchEmployee", "HR_Employee", FormMethod.Get))
{
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            @Html.Label("รหัสพนักงาน: ", htmlAttributes: new { @class = "col-md-4 control-label" })
            <div class="col-md-8">
                @Html.TextBox("EmployeeID", null, htmlAttributes: new { @class = "form-control", @placeholder = "สามารถค้นหาโดยใช้รหัสพนักงานได้", @maxlength = 50 })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("ชื่อ-นามสกุล พนักงาน", htmlAttributes: new { @class = "col-md-4 control-label" })
            <div class="col-md-8">
                @Html.TextBox("FullName", null, htmlAttributes: new { @class = "form-control", @placeholder = "สามารถค้นหาโดยพิมพ์ชื่อ นามสกุลได้", @maxlength = 100 })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("หน่วยงาน: ", htmlAttributes: new { @class = "col-md-4 control-label" })
            <div class="col-md-8">
                @Html.DropDownList("DepartmentID", null, "ทั้งหมด", htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="btn-group col-xs-offset-1 col-sm-offset-1 col-md-offset-4">
                <input type="submit" class="btn btn-primary" value="Search" />
                <a href='@Url.Action("SearchEmployee","HR_Employee")' class="btn btn-default">Reload</a>
            </div>
        </div>
    </div>
}

<table class="table table-bordered table-hover table-responsive">

    @if (!Model.Any() || Model == null)
    {
        <tr>
            <th>
                <p class="text-warning text-center"><span class="glyphicon glyphicon-alert"></span> ไม่พบข้อมูลพนักงาน</p>
            </th>
        </tr>
    }
    else
    {
        <tr>
            <th></th>
            <th>
                รหัสพนักงาน
            </th>
            <th>
                ชื่อ-นามสกุลพนักงาน
            </th>
            <th>
                วัน/เดือน/ปีเกิด
            </th>
            <th>
                หน่วยงานที่สังกัด
            </th>
            <th>
                ชื่อ-นามสกุล หัวหน้างาน
            </th>
        </tr>
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink("Edit", "Edit", "HR_Employee", new { id = item.EmployeeID }, null) |
                    @Html.ActionLink("Delete", "Delete", "HR_Employee", new { id = item.EmployeeID }, new { onclick = "return confirm('Are you sure you wish to delete this employee info?');" })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @{
                        DateTime? Bdate = item.Birthdate;
                        string FormatDate;
                        if (Bdate.HasValue)
                        {
                            FormatDate = Bdate.Value.ToString("dd/MM/yyyy");
                            @Html.DisplayFor(model => FormatDate);
                        }
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartmentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BossName)
                </td>

            </tr>
        }
    }
</table>
<div class="pull-right">
    @Html.ActionLink("Add New Employee", "Create", null, htmlAttributes: new { @class = "btn btn-default" })
</div>








