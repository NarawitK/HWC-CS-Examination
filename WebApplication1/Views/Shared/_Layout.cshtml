<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="@Url.Content("~/Content/bootstrap.min.css")" type="text/css" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/bootstrap-theme.min.css")"/>
    <link rel="stylesheet" href="@Url.Content("~/Content/jquery-ui.min.css")" type="text/css" />
    <link rel="stylesheet" href="@Url.Content("~/Content/jquery-ui.theme.min.css")" type="text/css" />
    @RenderSection("StyleSheet", required: false)
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src=@Url.Content("~/Scripts/jquery-2.2.4.min.js")></script>
    <script src=@Url.Content("~/Scripts/jquery-ui.min.js")></script>
    <meta name="description" content="C# Exam" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("C# Exam.", "Index", "HR_Employee", new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href='@Url.Action("Index", "HR_Employee")' class="dropdown-toggle" data-toggle="dropdown" role="button">พนักงาน<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("หน้าหลัก", "Index", "HR_Employee")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("เพิ่มพนักงาน", "Create", "HR_Employee")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("ค้นหาพนักงาน (Webservice)", "ListEmployee", "HR_Employee")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("ค้นหาพนักงาน (ไม่ใช้ Webservice)", "SearchEmployee", "HR_Employee")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href='@Url.Action("Index", "HR_Department")' class="dropdown-toggle" data-toggle="dropdown" role="button">หน่วยงาน<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("รายชื่อหน่วยงาน", "Index", "HR_Department")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("เพิ่มหน่วยงาน", "Create", "HR_Department")</li>
                        </ul>
                    </li>
                </ul>                
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        @RenderSection("Scripts", required: false)
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - C# Examination</p>
        </footer>
    </div>
    <script src=@Url.Content("~/Scripts/bootstrap.min.js")></script>
</body>
</html>